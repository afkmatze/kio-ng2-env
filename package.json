{
  "name": "kio-ng2-env",
  "version": "0.0.3",
  "description": "kio environment",
  "main": "node/index.js",
  "browser": "browser/index.js",
  "typings": "node/index.d.ts",
  "bin": {
    "kio-env-build-inc": "./bin/inc-build.js"
  },
  "scripts": {
    "test": "ts-mocha ./src/**/*.spec.ts",
    "test:watch": "./scripts/watch.sh test",
    "postinstall": "./scripts/postinstall.sh",
    "prestart": "npm run build",
    "start": "npm run dev",
    "dev": "./node_modules/.bin/nodemon -e ts --ignore dist/ --exec \"npm run dev\"",
    "clean:release": "rm -rf ./release",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "version": "npm run build:release",
    "postversion": "git push && git push --tags",
    "prebuild:release": "npm run clean:release",
    "build:release": "NODE_ENV=production npm run tsc:release",
    "build:package": "NODE_ENV=package npm run build",
    "tsc": "tsc -p tsconfig.json",
    "tsc:release": "tsc -p tsconfig.release.json",
    "tsc:release:watch": "tsc -p tsconfig.release.json -w",
    "package:minify": "uglifyjs release/index.js --source-map release/index.min.js.map --source-map-url release/index.js.map --compress --mangle --screw-ie8 --output release/index.min.js",
    "node:test": "ts-mocha ./src/node/**.spec.ts",
    "node:test:watch": "./scripts/watch.sh node:test",
    "browser:test": "karma start ./karma.browser.js"
  },
  "repository": {
    "type": "git",
    "url": "git@dergoldenefoehn.de:/opt/git/kio-ng2-env.git"
  },
  "keywords": [],
  "author": "Matthias Buchholz <mb@averagejoe.de>",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/jasmine": "^2.5.47",
    "@types/mocha": "^2.2.41",
    "chai": "^3.5.0",
    "jasmine": "^2.6.0",
    "jasmine-spec-reporter": "^4.1.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha": "^1.3.0",
    "karma-spec-reporter": "0.0.31",
    "karma-typescript": "^3.0.1",
    "karma-typescript-preprocessor": "^0.3.1",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "ts-mocha": "^1.0.3",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "@types/node": "^7.0.18",
    "rx-node": "^1.0.2",
    "rxfs": "github:afkmatze/rxfs",
    "rxshell": "github:afkmatze/rxshell"
  }
}
